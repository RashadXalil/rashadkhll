@model Product
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <!-- product details inner end -->
        <div class="product-details-inner">
            <div class="row">
                <div class="col-lg-5">
                    <div class="product-large-slider mb-20">
                        <div class="pro-large-img img-zoom">
                            <img src="/uploads/products/@Model.Image" alt="product thumb" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="product-details-des">
                        <h3 class="pro-det-title">@Model.Brand.Name @Model.Name</h3>
                        <div class="pro-review">
                            <span><a href="#">1 Review(s)</a></span>
                        </div>
                        <div class="price-box">
                            <span class="price-regular">$@((Model.SalePrice* (1- Model.DiscountPercent/100)).ToString("0.00"))</span>
                            <span class="price-old"><del>$@Model.SalePrice</del></span>
                        </div>
                        <p>@Model.Desc</p>
                        <div class="quantity-cart-box d-flex align-items-center mb-20">

                            <a asp-action="addbasket" asp-controller="shop" asp-route-id="@Model.Id" class="btn btn-default add-to-basket">Add To Basket</a>
                        </div>
                        <div class="availability mb-20" style="margin-bottom:5px">
                            <h5 class="cat-title">Brand:</h5>
                            <span>@Model.Brand.Name</span>
                        </div>
                        <div class="availability mb-20" style="margin-bottom:5px">
                            <h5 class="cat-title">Category:</h5>
                            <span>@Model.Category.Name</span>
                        </div>
                        <div class="availability mb-20" style="margin-bottom:5px">
                            <h5 class="cat-title">Gender:</h5>
                            <span>@Model.Gender.Name</span>
                        </div>
                        <div class="availability mb-20" style="margin-bottom:5px">
                            <h5 class="cat-title">Colors:</h5>
                            @foreach (var color in Model.productColors)
                            {
                                <span> @color.Color.Name </span>
                            }
                        </div>
                        <div class="availability mb-20" style="margin-bottom:5px">
                            <h5 class="cat-title">Availability:</h5>
                            <span style="color:@(Model.IsAvailable==true?"#22dd77":"Red")">@(Model.IsAvailable==true?"In Stock":"Out of Stock")</span>
                        </div>
                        <div class="share-icon">
                            <h5 class="cat-title">Share:</h5>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- product details inner end -->
    </div>
</div>