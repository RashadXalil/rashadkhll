@model MemberUpdateViewModel
<form asp-action="edit" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="UserName" class="required">User Name</label>
                <input asp-for="UserName" placeholder="First Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>

            </div>
        </div>
        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="FullName" class="required">Full Name</label>
                <input asp-for="FullName" placeholder="First Name" />
                <span asp-validation-for="FullName" class="text-danger"></span>

            </div>
        </div>
        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="Email" class="required">Email</label>
                <input asp-for="Email" placeholder="Last Name" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="single-input-item">
        <label asp-for="Country" class="required">Country</label>
        <input asp-for="Country" placeholder="Country" />
        <span asp-validation-for="Country" class="text-danger"></span>

    </div>
    <div class="single-input-item">
        <label asp-for="City" class="required">City</label>
        <input asp-for="City" placeholder="City" />
    </div>
    <div class="single-input-item">
        <label asp-for="Adress" class="required">Adress</label>
        <input asp-for="Adress" placeholder="Adress" />
        <span asp-validation-for="Adress" class="text-danger"></span>

    </div>
    <div class="single-input-item">
        <label asp-for="Phonenumber" class="required">Phonenumber</label>
        <input asp-for="Phonenumber"  placeholder="+994-XX-XXX-XX-XX" />
        <span asp-validation-for="Phonenumber" class="text-danger"></span>

    </div>
    <fieldset>
        <legend>Password change</legend>
        <div class="single-input-item">
            <label asp-for="CurrentPassword" class="required">Current Password</label>
            <input asp-for="CurrentPassword" placeholder="Current Password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="Password" class="required">New Password</label>
                    <input asp-for="Password" placeholder="New Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="ConfirmPassword" class="required">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>
        </div>
    </fieldset>
    <div class="single-input-item">
        <button type="submit" class="check-btn sqr-btn ">Save Changes</button>
    </div>
</form>