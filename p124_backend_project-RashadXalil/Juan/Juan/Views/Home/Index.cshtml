@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- main wrapper start -->
<main>
    <!-- hero slider section start -->
    <section class="hero-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                        @foreach (var slider in Model.Sliders)
                        {
                            <!-- single slider item start -->
                            <div class="hero-single-slide">
                                <div class="hero-slider-item bg-img" data-bg="/uploads/sliders/@slider.Image">
                                    <div class="hero-slider-content slide-1">
                                        <h5 class="slide-subtitle">@slider.SubTitle</h5>
                                        <h2 class="slide-title">@slider.Title</h2>
                                        <p class="slide-desc">@slider.Desc</p>
                                        <a asp-controller="shop" asp-action="index" class="btn btn-hero">@slider.BtnText</a>
                                    </div>
                                </div>
                            </div>
                            <!-- single slider item end -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- hero slider section end -->
    <!-- service features start -->
    <section class="service-policy-area">
        <div class="container">
            <div class="row">
                @for (int i = 0; i < Model.Features.Count; i++)
                {
                    <!-- single policy item start -->
                    <div class="col-lg-4">
                        <div class="service-policy-item mt-30 bg-@(i==0?"1":(i==1?"2":"3"))">
                            <div class="policy-icon">
                                <img src="~/uploads/features/@Model.Features[i].Image" alt="policy icon">
                            </div>
                            <div class="policy-content">
                                <h5 class="policy-title">@Model.Features[i].Title</h5>
                                <p class="policy-desc">@Model.Features[i].Title</p>
                            </div>
                        </div>
                    </div>
                    <!-- single policy item start -->
                }
            </div>
        </div>
    </section>
    <!-- service features end -->
    <!-- our product area start -->
    <section class="our-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">Our Product</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                        @foreach (var product in Model.Products)
                        {
                            <!-- product single item start -->
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a asp-controller="home" asp-action="productdetail" asp-route-id="@product.Id" asp-route-brandId="@product.BrandId">
                                        <img style="height:268px" src="uploads/products/@product.Image" alt="">
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a asp-controller="home" asp-action="productdetail" asp-route-id="@product.Id" asp-route-brandId="@product.BrandId">@product.Brand.Name @product.Name</a>
                                    </h5>
                                    @if (product.DiscountPercent > 0)
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@((product.SalePrice* (1- product.DiscountPercent/100)).ToString("0.00"))</span>
                                            <span class="price-old"><del>$@product.SalePrice</del></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@product.SalePrice</span>
                                        </div>
                                    }
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                        <a asp-action="addbasket" asp-controller="shop" asp-route-id="@product.Id" data-toggle="tooltip" title="Add To Cart" class="add-to-basket"><i class="ion-bag add-to-basket"></i></a>
                                        <a asp-controller="home" asp-action="GetProduct" asp-route-id="@product.Id" class="quick-view">
                                            <span data-toggle="tooltip"
                                                  title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- product single item start -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- our product area end -->
    <!-- banner statistic area start -->
    <div class="banner-statistics">
        <div class="container">
            <div class="row no-gutters mtn-30">
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a href="product-details.html">
                            <img src="~/assets/img/banner/@Model.Settings["Promotion1Image"]" alt="banner-image">
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">@Model.Settings["Promotion1SubTitle"]</h5>
                            <h3 class="banner-title">@Model.Settings["Promotion1Title1"]<br>@Model.Settings["Promotion1Title2"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a href="product-details.html">
                            <img src="~/assets/img/banner/@Model.Settings["Promotion2Image"]" alt="banner-image">
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">@Model.Settings["Promotion2SubTitle"]</h5>
                            <h3 class="banner-title">@Model.Settings["Promotion2Title1"]<br>@Model.Settings["Promotion2Title2"]</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- banner statistic area end -->
    <!-- top seller area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">top seller</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a href="#">
                            <img src="~/assets/img/banner/@Model.Settings["TopSellerBanner"]" alt="product banner" style="display:block">
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        @foreach (var item in Model.RatedProducts)
                        {
                        <!-- product item start -->
                        <div class="slide-item">
                            <div class="pro-item-small mt-30">
                                <div class="product-thumb">
                                    <a asp-controller="home" asp-action="productdetail" asp-route-id="@item.Id" asp-route-brandId="@item.BrandId">
                                        <img src="~/uploads/products/@item.Image" alt="">
                                    </a>
                                </div>
                                <div class="pro-small-content">
                                    <h6 class="product-name">
                                        <a asp-controller="home" asp-action="productdetail" asp-route-id="@item.Id" asp-route-brandId="@item.BrandId">@item.Brand.Name @item.Name</a>
                                    </h6>
                                    @if (item.DiscountPercent > 0)
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@((item.SalePrice* (1- item.DiscountPercent/100)).ToString("0.00"))</span>
                                            <span class="price-old"><del>$@item.SalePrice</del></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="price-box">
                                            <span class="price-regular">$@item.SalePrice</span>
                                        </div>
                                    }
                                <div class="ratings">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="good"><i class="@(item.Rate>= i ? "fas" : "far") fa-star"></i></span>
                                    }
                                </div>
                                <div class="product-link-2">
                                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                    <a asp-action="addbasket" asp-controller="shop" asp-route-id="@item.Id" data-toggle="tooltip" title="Add To Cart" class="add-to-basket"><i class="ion-bag add-to-basket"></i></a>
                                    <a asp-controller="home" asp-action="GetProduct" asp-route-id="@item.Id" class="quick-view">
                                        <span data-toggle="tooltip"
                                              title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                    </a>
                                </div>
                                </div>
                            </div>
                        </div>
                        <!-- product item start -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- top seller area end -->
    <!-- brand area start -->
    <div class="brand-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-active-carousel">
                        @foreach (var brand in Model.Brands)
                        {
                            <div class="brand-item slick-slide slick-active" >
                                <a href="#">
                                    <img style="margin: auto;height:51px" src="~/uploads/brands/@brand.Image" alt="brand image">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand area end -->
</main>
<!-- main wrapper end -->
<!-- Quick view modal start -->
<div class="modal" id="quick_view">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        
    </div>
</div>
<!-- Quick view modal end -->
