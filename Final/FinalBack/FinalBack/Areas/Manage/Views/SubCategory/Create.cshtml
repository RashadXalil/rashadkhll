@model SubCategory
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Create</h1>
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Enter Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="CategoryId">Categories</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.Categories,nameof(BlogCategory.Id),nameof(BlogCategory.Name))">
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
