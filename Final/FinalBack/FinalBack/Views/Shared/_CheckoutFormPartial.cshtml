@model Order
<div class="checkbox-form">
    <h3>Billing Details</h3>
    <form id="order-form" asp-action="create" method="post">
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Country">Country <span>*</span></label>
                <input asp-for="Country" type="text" id="firstname" />
            </div>
            <div class="col-md-6">
                <label asp-for="FirstName">First Name <span>*</span></label>
                <input asp-for="FirstName" type="text" id="firstname" />
            </div>
            <div class="col-md-6">
                <label asp-for="Surname">Last Name<span>*</span></label>
                <input asp-for="Surname" type="text" id="lastname" />
            </div>
            <div class="col-md-12">
                <label asp-for="CompanyName">Company Name</label>
                <input asp-for="CompanyName" type="text" id="companyname" />
            </div>
            <div class="col-md-12">
                <label asp-for="Address" for="adress">Adress <span>*</span></label>
                <input asp-for="Address" type="text"
                       id="adress"
                       placeholder="Street adress" />
                <label asp-for="City" for="adress">City <span>*</span></label>
                <input asp-for="City" type="text"
                       id="aparment"
                       placeholder="City"/>
            </div>
            <div class="col-md-6">
                <label asp-for="Email" for="email">Email <span>*</span></label>
                <input asp-for="Email" type="email" id="email" />
            </div>
            <div class="col-md-6">
                <label asp-for="PhoneNumber" for="phone">Phone <span>*</span></label>
                <input asp-for="PhoneNumber" type="text" id="phone" />
            </div>
            <div class="col-md-12">
                <label asp-for="Note">Order Notes<span>*</span></label>
                <textarea style="padding:10px" asp-for="Note" cols="30" rows="6"></textarea>
            </div>
        </div>
    </form>
</div>
