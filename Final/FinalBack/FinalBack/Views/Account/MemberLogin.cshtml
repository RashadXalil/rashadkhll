@model MemberLoginViewModel
 <main>
      <section id="custom-banner-section-login">
        <div class="page-header">
          <p class="page-header-text">Login</p>
          <span><a href="index.html">Home / </a>Login</span>
        </div>
      </section>
      <section id="login-section">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="section-title">Login</div>
              <form asp-action="memberlogin" method="post">
                <label asp-for="UserName">Username or email address
                  <span class="star-span">*</span></label>
                <input
                  type="text"
                  class="form-input"
                       asp-for="UserName"
                  id="name"
                  placeholder="Enter Username"
                />
                <label for="password"
                       asp-for="Password"
                  >Password <span class="star-span">*</span></label>
                <input
                  type="password"
                       asp-for="Password"
                  class="form-input"
                  placeholder="Enter Password ..."
                />
                <div class="row">
                  <div class="col-6">
                      
                    <input asp-for="isPersistent" type="checkbox" id="remember" />
                    <label asp-for="isPersistent" for="remember">Remember Me</label>
                  </div>
                  <div class="col-6">
                    <a asp-controller="account" asp-action="ForgotPassword">Lost your Password?</a>
                  </div>
                </div>
                <button type="submit">LOG IN</button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
 