@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container" style="padding:30px">
    <div class="row">
        <center>
            <h4>Reset Password</h4>
        </center>
        <form class="pt-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input class="form-control form-control-lg" asp-for="NewPassword" placeholder="new password">
            </div>
            <div class="form-group">
                <input class="form-control form-control-lg" asp-for="ConfirmPassword" placeholder="confirm password">
            </div>
            <div class="mt-3">
                <center>
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Reset</button>
                </center>
            </div>
        </form>
    </div>
</div>