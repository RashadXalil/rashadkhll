@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8" style="padding:30px">
            <center>
                <h4>Forgot Password?</h4>
            </center>
            <form class="pt-3" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input class="form-control form-control-lg" asp-for="Email" placeholder="Email">
                </div>
                <div class="mt-3">
                    <center>
                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SEND</button>
                    </center>
                </div>
            </form>

        </div>
        <div class="col-2"></div>
    </div>
</div>